<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical"
    tools:context=".rong_yun.activity.send_red_pakege.SendJinQiangPakegeActivity">
    <include layout="@layout/message_fragment_actionbar_layout"/>
    <com.zhaoxing.view.sharpview.SharpLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundColor="@color/white"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        app:radius="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总金额"
            android:textColor="@color/defaultColor"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            />
        <EditText
            android:id="@+id/jinqiang_amount_etv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="30-500"
            android:singleLine="true"
            android:textSize="14sp"
            android:textColorHint="@color/default_two_color"
            android:textColor="@color/defaultColor"
            android:gravity="right|center"
            android:inputType="number"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textColor="@color/defaultColor"
            android:textSize="14sp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            />
    </com.zhaoxing.view.sharpview.SharpLinearLayout>
    <com.zhaoxing.view.sharpview.SharpLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundColor="@color/white"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        app:radius="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红包个数"
            android:textColor="@color/defaultColor"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:layout_marginRight="12dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/jinqiang_hb_num_recycle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="包"
            android:textColor="@color/defaultColor"
            android:textSize="14sp"
            android:gravity="right"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            />
    </com.zhaoxing.view.sharpview.SharpLinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            >
            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/jinqiang_send_bg_"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/send_red_pakeget"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginBottom="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/send_jinqiang_btn" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.zhaoxing.view.sharpview.SharpLinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            app:backgroundColor="@color/white"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"

            app:radius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="雷         号"
                    android:textColor="@color/defaultColor"
                    android:textSize="14sp"
                    android:layout_marginLeft="12dp"
                    android:paddingTop="36dp"
                    android:paddingBottom="36dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="12dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="18dp"
                    android:layout_gravity="center"
                    android:id="@+id/jinqiang_bobm_num_recycle"
                    />
                <RadioButton
                    android:id="@+id/no_rbt"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:text="不"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="12dp"
                    android:layout_gravity="center"
                    android:background="@drawable/jinqiang_send_hb_num_selector"
                    android:button="@null"
                    android:visibility="invisible"

                    />
            </LinearLayout>
            <TextView
                android:id="@+id/jinqiang_amount_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="¥0"
                android:textSize="36sp"
                android:textColor="#FE9C29"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"

                />
        </com.zhaoxing.view.sharpview.SharpLinearLayout>
    </FrameLayout>

</LinearLayout>