<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    >
    <TextView
        android:id="@+id/child_backgroup_linear"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/main_gradient_shape"
        />
    <com.zhaoxing.view.sharpview.SharpLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:backgroundColor="@color/white"
        app:radius="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/child_title_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/zhituichengyuan"
                android:layout_margin="12dp"
                android:layout_gravity="center"
                />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/child_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="其实都没有"
                        android:textColor="@color/defaultColor"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        />
                    <ImageView
                        android:id="@+id/child_sex_icon_iv"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/icon_boy"
                        android:layout_toRightOf="@+id/child_name_tv"
                        android:layout_marginLeft="3dp"
                        android:layout_centerInParent="true"
                        />
                    <TextView
                        android:id="@+id/child_id_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/default_two_color"
                        android:text="ID:2148"
                        android:layout_below="@+id/child_name_tv"
                        android:layout_marginTop="3dp"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/child_recycle_item_showMore_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看详情"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:layout_centerVertical="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:textColor="@color/white"
                    android:background="@drawable/child_player_recycle_item_show_more_selector"
                    />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/spliteColor"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/child_agent_num_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#F8A02F"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="代理人数"
                    android:gravity="center"
                    android:textColor="@color/defaultColor"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/spliteColor"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/child_player_num_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#31A049"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="玩家人数"
                    android:gravity="center"
                    android:textColor="@color/defaultColor"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/spliteColor"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/child_yongjin_amount_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#C72352"
                    android:gravity="center"
                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="流水佣金"
                    android:gravity="center"
                    android:textColor="@color/defaultColor"
                    />
            </LinearLayout>
        </LinearLayout>
    </com.zhaoxing.view.sharpview.SharpLinearLayout>

</FrameLayout>