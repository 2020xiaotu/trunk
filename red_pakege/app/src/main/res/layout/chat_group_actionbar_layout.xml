<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/chat_group_action_root_linear"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--    app:contentInsetStart="0dp" 解决自定义view时 左侧有间距的问题-->
    <androidx.appcompat.widget.Toolbar
        android:background="@color/red"
        android:id="@+id/chat_group_actionbar_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="0dp">
        <RelativeLayout
            android:id="@+id/chat_group_actionbar_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/chat_group_action_left_iv"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_back"
                    android:padding="12dp"
                    android:layout_centerVertical="true"
                    />

            <TextView
                android:id="@+id/chat_group_actionBar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/chat_group_send_red_pakege_iv"
                android:layout_toRightOf="@+id/chat_group_action_left_iv"
                />
            <ImageView
                android:id="@+id/chat_group_send_red_pakege_iv"
                android:layout_width="36dp"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/chat_group_action_member_iv"
                android:paddingRight="6dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_actionbar_send_red"/>
                <ImageView
                    android:id="@+id/chat_group_action_member_iv"
                    android:layout_width="36dp"
                    android:layout_height="42dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="12dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:paddingLeft="6dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_group_info"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
</LinearLayout>