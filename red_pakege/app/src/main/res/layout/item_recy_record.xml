<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp12">

    <TextView
        android:id="@+id/tv_itemrecord_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/defaultColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_itemrecord_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        app:layout_constraintTop_toBottomOf="@+id/tv_itemrecord_type"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="2019-12-06"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_itemrecord_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30元"
        android:textColor="@color/blue_6he"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_itemrecord_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:text="充值中"
        android:textColor="@color/blue_6he"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_itemrecord_money"/>



</androidx.constraintlayout.widget.ConstraintLayout>