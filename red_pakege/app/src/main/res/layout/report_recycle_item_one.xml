<?xml version="1.0" encoding="utf-8"?>
<com.zhaoxing.view.sharpview.SharpLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    app:backgroundColor="@color/white"
    app:left_top_radius="8dp"
    app:right_top_radius="8dp"
    >
    <TextView
        android:id="@+id/report_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="玩家活跃度"
        android:textColor="@color/defaultColor"
        android:layout_margin="12dp"
        />
<!--    如果title length不一样.给report_title_tv设置minWidth-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:text="玩家活跃度"
            android:paddingRight="24dp"
            android:background="@color/red"/>
<!--        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/spliteColor"/>-->
    </LinearLayout>
</com.zhaoxing.view.sharpview.SharpLinearLayout>