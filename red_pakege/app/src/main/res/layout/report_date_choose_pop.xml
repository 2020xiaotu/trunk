<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="#F02835"
        android:text="选择时间"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/report_today_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="今天"
            android:gravity="center"
            android:textColor="@color/report_choose_date_textcolor"
            android:background="@drawable/report_choose_pop_ripple"
            android:button="@null"
            />
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/spliteColor"
            />
        <RadioButton
            android:id="@+id/report_yestoday_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="昨天"
            android:gravity="center"
            android:textColor="@color/report_choose_date_textcolor"
            android:background="@drawable/report_choose_pop_ripple"
            android:button="@null"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/spliteColor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/report_this_week_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="本周"
            android:gravity="center"
            android:textColor="@color/report_choose_date_textcolor"
            android:background="@drawable/report_choose_pop_ripple"
            android:button="@null"
            />
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/spliteColor"
            />
        <RadioButton
            android:id="@+id/report_last_week_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="上周"
            android:gravity="center"
            android:textColor="@color/report_choose_date_textcolor"
            android:background="@drawable/report_choose_pop_ripple"
            android:button="@null"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/spliteColor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/report_this_month_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="本月"
            android:gravity="center"
            android:textColor="@color/report_choose_date_textcolor"
            android:background="@drawable/report_choose_pop_ripple"
            android:button="@null"
            />
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/spliteColor"
            />
        <RadioButton
            android:id="@+id/report_last_month_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="上月"
            android:gravity="center"
            android:textColor="@color/report_choose_date_textcolor"
            android:background="@drawable/report_choose_pop_ripple"
            android:button="@null"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/choose_date_true_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="#F02835"
        android:text="确定"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        />
</LinearLayout>