<?xml version="1.0" encoding="utf-8"?>
<com.zhaoxing.view.sharpview.SharpLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:backgroundColor="@color/white"
    app:radius="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/start_date_linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >
                <ImageView
                    android:id="@+id/showmore_imageview"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_bill_start"
                    android:layout_gravity="center"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开始时间"
                        android:textColor="@color/defaultColor"
                        android:textSize="14sp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/start_date_show_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019-11-11"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:textColor="@color/default_two_color"
                        android:minWidth="80dp"
                        android:gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/spliteColor"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp" />
        <LinearLayout
            android:id="@+id/end_date_linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_bill_stop"
                    android:layout_gravity="center"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="结束时间"
                        android:textColor="@color/defaultColor"
                        android:textSize="14sp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/end_date_show_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019-11-11"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:textColor="@color/default_two_color"
                        android:minWidth="80dp"
                        android:gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</com.zhaoxing.view.sharpview.SharpLinearLayout>