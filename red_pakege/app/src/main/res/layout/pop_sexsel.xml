<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/id_pop_layout"
    >

    <RelativeLayout
        android:id="@+id/rl_sexsel_male"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        >
        <TextView
            android:id="@+id/tv_sex_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="男"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/tv_sex_male"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_male"/>

        <ImageView
            android:id="@+id/iv_male_gou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/icon_gouxuan"/>

    </RelativeLayout>

    <View style="@style/line"/>

    <RelativeLayout
        android:id="@+id/rl_sexsel_female"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        >
        <TextView
            android:id="@+id/tv_sex_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="女"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/tv_sex_female"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_female"/>

        <ImageView
            android:id="@+id/iv_female_gou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/icon_gouxuan"/>

    </RelativeLayout>

</LinearLayout>