<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/spliteColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/saolei_pakege_detail_item_title_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/error_image" />

    <TextView
        android:id="@+id/saolei_pakege_detail_item_username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="3dp"
        android:text="患者"
        android:textColor="@color/defaultColor"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/saolei_pakege_detail_item_title_iv"
        app:layout_constraintTop_toTopOf="@+id/saolei_pakege_detail_item_title_iv" />

    <ImageView
        android:id="@+id/is_zhuangjia_iv"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/saolei_pakege_detail_item_username_tv"
        app:layout_constraintTop_toTopOf="@+id/saolei_pakege_detail_item_username_tv"
        app:srcCompat="@drawable/ic_cow_bank" />

    <TextView
        android:id="@+id/sao_lei_pakege_detail_item_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="2019-11-28 19:25:24"
        app:layout_constraintBottom_toBottomOf="@+id/saolei_pakege_detail_item_title_iv"
        app:layout_constraintStart_toStartOf="@+id/saolei_pakege_detail_item_username_tv" />

    <TextView
        android:id="@+id/pakege_detail_item_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="4.68"
        android:textColor="@color/defaultColor"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/pakege_detail_item_niuji_iv"
        app:layout_constraintTop_toTopOf="@+id/pakege_detail_item_niuji_iv" />

    <ImageView
        android:id="@+id/pakege_detail_item_niuji_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="12dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/is_zhuangjia_iv"
        app:srcCompat="@drawable/ic_cow_1"
        tools:visibility="gone" />


</androidx.constraintlayout.widget.ConstraintLayout>