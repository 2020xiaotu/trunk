<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".uuuu.iuymn.mkjnb.activity.mine_fragment_activitys.MineMessageActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mine_message_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/action_bar_color">
        <TextView
            android:id="@+id/mine_message_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="返回"
            android:textColor="@color/action_bar_return_textcolor_selecter"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <RadioButton
                android:id="@+id/notice"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:textSize="16sp"
                android:background="@drawable/user_info_selecter"
                android:text="        公告        "
                android:textColor="@drawable/user_info_text_color"
                />

            <RadioButton
                android:padding="5dp"
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:background="@drawable/user_info_selecter2"
                android:textSize="16sp"
                android:textColor="@drawable/user_info_text_color"
                android:text="        私信        " />
        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <include layout="@layout/split_horizontal"/>
    <include layout="@layout/split_big"/>
    <include layout="@layout/split_horizontal"/>
    <FrameLayout
        app:layout_constraintTop_toBottomOf="@id/mine_message_title"
        android:id="@+id/mine_message_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>