<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"
        android:id="@+id/conslayout_qy"
        android:layout_width="match_parent"
        android:layout_height="491dp">

        <TextView
            android:id="@+id/tv_qymore_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:text=" @本活动最终解释权为我司所有"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tv_qymore_unlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_qy_searchmore_btn"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_qymore_copyright"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_qymore_unlock_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="20dp"
            android:text="解锁方式： 微信，微信朋友圈，QQ，抖音，微博，发短信，贴吧等任何方式都可以，面对面邀请您的亲朋好友成功注册，解锁即可马上抽奖。"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_qymore_unlock"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_qy_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_bkg_white12corner"
            android:padding="@dimen/dp_10"
            android:text="1.每邀请1人成功注册，可获得10积分，10积分可抽奖一次趣约红包，每包金额1-88元。 2.必须达到100积分，才可以解锁趣约红包功能，解锁后可以连续抢10次以上红包。 3.抢到红包的金额高达100%，最高可抽88元。 4.此活动为限制活动，每人只能参与一次。相同IP地址、相同设备码均视为同一个人注册，如未真实注册，重复注册，等非法行为均会取消活动资格。"
            android:textColor="#222222"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_qymore_unlock_msg"
            app:layout_constraintLeft_toLeftOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"
        android:id="@+id/conslayout_zx"
        android:layout_width="match_parent"
        android:layout_height="468dp">

        <TextView
            android:id="@+id/tv_zx_searchmore_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:text=" @本活动最终解释权为我司所有."
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_zx_searchmore_tisheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/bg_zx_searchmore_btn"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_zx_searchmore_copyright"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/zx_tip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="- - - - "
            android:textColor="#FFDA28"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_zx_searchmore_tisheng"
            app:layout_constraintLeft_toLeftOf="parent" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="31dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline5">

            <TextView
                android:id="@+id/tv_zj_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="1.只要您等级达到VIP5，投注限定玩法即可享受投注金额的1%专享回馈红包 2.达到VIP5的会员请每日12点登录领取，过期作废，没有领取的不累计。 3.此活动随时可能取消，千万回馈红包送完为止。 4.次活动只有投注限定玩法才能享受1%专享红包。 5.没有达到等级的请抓紧时间提升自己的等级。"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            />
        </ScrollView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="217dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="362dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/conslayout_tj"
        android:layout_width="match_parent"
        android:layout_height="470dp"

        >

        <TextView
            android:id="@+id/tv_tj_searchmore_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:text=" @本活动最终解释权为我司所有。"
            android:textColor="@color/white"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/tv_tj_searchmore_tisheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_zx_searchmore_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/tv_tj_searchmore_copyright"
            android:layout_marginBottom="@dimen/dp_10"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="80dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_bkg_white12corner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <TextView
                android:id="@+id/tv_tj_msg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="1.VIP3可抢普通红包，由玩家随意发送的红包，为营造良好的购彩氛围，我司鼓励各位赢钱多的玩家，可以发点普通红包，分享红包，传递幸福。 2.VIP4可抢官方红包，由平台每晚8点准时发送，最高可以抢到5888元。"
                android:textSize="12sp" />
        </ScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>

    
</LinearLayout>