<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_qymore_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:text=" @本活动最终解释权为我司所有"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_qymore_unlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_qy_searchmore_btn"
        android:gravity="center"
        android:text="邀请好友解锁"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_qymore_copyright"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_qymore_unlock_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="20dp"
        android:text="解锁方式： 微信，微信朋友圈，QQ，抖音，微博，发短信，贴吧等任何方式都可以，面对面邀请您的亲朋好友成功注册，解锁即可马上抽奖。"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_qymore_unlock"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_bkg_white12corner"
        android:padding="@dimen/dp_10"
        android:text="1.每邀请1人成功注册，可获得10积分，10积分可抽奖一次趣约红包，每包金额1-88元。 2.必须达到100积分，才可以解锁趣约红包功能，解锁后可以连续抢10次以上红包。 3.抢到红包的金额高达100%，每包最高可抽88元。 4.此活动为限制活动，每人只能参与一次。相同IP地址、相同设备码均视为同一个人注册，如未真实注册，重复注册，等非法行为均会取消活动资格。"
        android:textColor="#222222"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_qymore_unlock_msg"
        app:layout_constraintLeft_toLeftOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>